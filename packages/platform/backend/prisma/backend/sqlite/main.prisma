datasource db {
    provider = "sqlite"
}

generator client {
    provider               = "prisma-client"
    output                 = "../../../src/database/_generated/backend/sqlite"
    moduleFormat           = "esm"
    generatedFileExtension = "ts"
    importFileExtension    = "ts"
}

generator json {
    provider = "prisma-json-types-generator"
}
