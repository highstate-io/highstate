{
  "name": "@highstate/k8s.monitor-worker",
  "private": true,
  "version": "0.16.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "highstate": {
    "type": "worker"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "tags": [
      "stdlib"
    ]
  },
  "scripts": {
    "build": "highstate build",
    "build-image": "docker build ../../.. -f Dockerfile -t ghcr.io/highstate-io/highstate/worker.k8s-monitor --load",
    "typecheck": "tsgo --noEmit --skipLibCheck",
    "biome": "biome check --write --unsafe --error-on-warnings",
    "biome:check": "biome check --error-on-warnings",
    "push-image": "docker push ghcr.io/highstate-io/highstate/worker.k8s-monitor"
  },
  "dependencies": {
    "@highstate/api": "workspace:*",
    "@highstate/contract": "workspace:*",
    "@highstate/library": "workspace:*",
    "@highstate/worker-sdk": "workspace:*",
    "@kubernetes/client-node": "^1.3.0",
    "ansi-colors": "^4.1.3",
    "remeda": "^2.26.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@highstate/cli": "workspace:*",
    "@typescript/native-preview": "^7.0.0-dev.20250920.1",
    "lerna": "^8.2.3"
  },
  "repository": {
    "url": "https://github.com/highstate-io/highstate"
  }
}
